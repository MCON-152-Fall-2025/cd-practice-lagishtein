{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd recipeshare && mvn -DskipTests package"
  },
  "deploy": {
    "startCommand": "cd recipeshare && java -jar target/*.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 100
  }
}